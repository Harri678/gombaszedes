<Window x:Class="gombaszedes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gombaszedes"
        mc:Ignorable="d"
        Title="Sakk Gomba Gyűjtő - Bástya" Height="600" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="57*"/>

        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Új játék" Click="NewGame_Click" Padding="10,5" Margin="0,0,20,0" Background="LightGreen"/>
            <Image x:Name="StatusImage" Width="40" Height="40" Source="/kepek/happy.png"/>
            <TextBlock x:Name="InfoText" Text="Kattints a következő gombára!" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="16"/>
        </StackPanel>

        <UniformGrid x:Name="ChessBoard" Grid.Row="1" Rows="8" Columns="8" Margin="10,10,10,10" Grid.RowSpan="2">
        </UniformGrid>
    </Grid>
</Window>
