<Window x:Class="gombaszedes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gombaszedes"
        mc:Ignorable="d"
        Title="Sakk Gomba Gyűjtő - Bástya" Height="600" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="57*"/>

        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Új játék" Click="NewGame_Click" Padding="10,5" Margin="0,0,20,0" Background="LightGreen"/>
            <Image x:Name="StatusImage" Width="40" Height="40" Margin="0,0,20,0" Source="/kepek/happy.png"/>
            <Button Content="Bástya" Padding="10,5" Margin="0,0,20,0" Click="Rook_Click"/>
            <Button Content="Futó"    Padding="10,5" Margin="0,0,20,0" Click="Bishop_Click"/>
            <Button Content="Vezér"   Padding="10,5" Margin="0,0,20,0" Click="Queen_Click"/>
            <Button Content="Huszár"  Padding="10,5" Margin="0,0,20,0" Click="Knight_Click"/>
        </StackPanel>

        <UniformGrid x:Name="ChessBoard" Grid.Row="1" Rows="8" Columns="8" Margin="10,10,10,10" Grid.RowSpan="2">
        </UniformGrid>
    </Grid>
</Window>
